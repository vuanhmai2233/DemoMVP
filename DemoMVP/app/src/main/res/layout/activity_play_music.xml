<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screen.playMusic.PlayMusicActivity"
    >
    <TextView
        android:id="@+id/textviewNameSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Name Song"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/imageViewSong"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/imageViewSong"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textviewNameSong"
        />
    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/buttonBack"
        app:layout_constraintTop_toBottomOf="@id/imageViewSong"
        style="@style/Base.Widget.AppCompat.SeekBar"
        />


    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonPlay"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        />
    <ImageButton
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_play"
        app:layout_constraintLeft_toRightOf="@id/buttonBack"
        app:layout_constraintRight_toLeftOf="@id/buttonPause"
        app:layout_constraintTop_toTopOf="@id/buttonBack"

        />
    <ImageButton
        android:id="@+id/buttonPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_pause"
        app:layout_constraintLeft_toRightOf="@id/buttonPlay"
        app:layout_constraintRight_toLeftOf="@id/buttonStop"
        app:layout_constraintTop_toTopOf="@id/buttonBack"
        />
    <ImageButton
        android:id="@+id/buttonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_stop"
        app:layout_constraintLeft_toRightOf="@id/buttonPause"
        app:layout_constraintRight_toLeftOf="@id/buttonNext"
        app:layout_constraintTop_toTopOf="@id/buttonBack"
        />
    <ImageButton
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_next"
        app:layout_constraintLeft_toRightOf="@id/buttonStop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewNameSong"
        app:layout_constraintTop_toTopOf="@id/buttonBack"
        />
</android.support.constraint.ConstraintLayout>
